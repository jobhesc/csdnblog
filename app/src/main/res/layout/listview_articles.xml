<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:blog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView android:id="@+id/listview_article_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_original"/>
        <TextView android:id="@+id/listview_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:singleLine="false"
            android:text="标题"/>
    </LinearLayout>
    <TextView android:id="@+id/listview_article_summay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:text="摘要"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">
        <TextView android:id="@+id/listview_article_updateOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"
            android:text="发布日期"/>
        <TextView android:id="@+id/listview_article_readState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"
            android:drawableLeft="@drawable/icon_view"
            android:drawablePadding="5dp"
            android:text="阅读情况"/>
        <TextView android:id="@+id/listview_article_commentState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"
            android:drawableLeft="@drawable/icon_comment"
            android:drawablePadding="5dp"
            android:text="评论情况"/>
    </LinearLayout>
</LinearLayout>
