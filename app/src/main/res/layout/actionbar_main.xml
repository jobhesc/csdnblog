<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:gravity="center_vertical"
    style="?attr/actionBarStyle">

    <ImageView android:id="@+id/actionbar_left_button"
        android:layout_width="@dimen/actionbar_item_width"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/actionbar_bg"
        android:src="@drawable/actionbar_back"/>
    <View android:id="@+id/actionbar_dividing"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="@android:color/black"></View>
    <TextView android:id="@+id/actionbar_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/actionbar_height"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text="标题"/>

    <ImageView android:id="@+id/actionbar_right_button1"
        android:layout_width="@dimen/actionbar_item_width"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:background="@drawable/actionbar_bg"
        android:src="@drawable/actionbar_search"/>
    <ImageView android:id="@+id/actionbar_right_button2"
        android:layout_width="@dimen/actionbar_item_width"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:background="@drawable/actionbar_bg"
        android:src="@drawable/actionbar_more"/>
</LinearLayout>
